---
import { Header, Button, Footer } from '@littlesticks/odyssey-theme-components';
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';
import Logo from '../components/widgets/Logo.astro';
import settings from '../config/settings';
import { footerLists, footerSocials } from '../config/footer';
import AdjustableButton from '../components/widgets/adjustable-button.astro';
export interface Props {
	seo?: BaseHeadProps;
}

	import { nav } from '../config/nav.js';
	import Icon from 'astro-icon';

	const { seo } = Astro.props as Props;
---

<Layout {seo}>
	<Header rightMenu navData={nav} slot="header">
		<a slot="icon-nav" class="github-dropdown" href="https://github.com/AaronsKit/Aarons_Toolkit">
			<Icon name="mdi:github" width="48px" height="48px" />
		</a>
		<span slot="logo">
			<Logo />
		</span>
		<div class="header-actions" slot="action-item">
			<a class="github" href="https://github.com/AaronsKit/Aarons_Toolkit">
				<Icon name="mdi:github" width="48px" height="48px" />
			</a>
			<AdjustableButton href="/get-started">Get Started</AdjustableButton>
		</div>
	</Header>
	<div id="page">
		<slot />
	</div>
	<Footer slot="footer" background="var(--theme-surface-1)" color="var(--theme-on-surface-1)" {footerLists}
		{footerSocials} copyrightName={settings.name} showLittleSticksPlug={settings.showLittleSticksPlug}>
		<Logo slot="logo" />
	</Footer>
</Layout>

<style>
	.header-actions {
		display: flex;
		align-items: center;
		gap: 12px
	}

	.github {
		display: flex;
	}
	.github-dropdown {
		display: none;
	}
	@media screen and (max-width: 360px) {
		.header-actions {
			gap: 2px;
		}
		.github {
			display:none;
		}
		.github-dropdown {
			display: flex;
		}
	}
</style>