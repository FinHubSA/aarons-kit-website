---
import { Container } from "@littlesticks/odyssey-theme-components";

const {background, color} = Astro.props;
---
<Container>
  <section class="small-card__section" style={background && `--section-bg:${background}; --section-color:${color}`}>
    <div class="small-card__container">
      <slot></slot>
    </div>
  </section>
</Container>

<style>
  .small-card__section {
    --section-bg: var(--theme-surface-1);
    --section-color: var(--theme-on-surface-1);
    margin: var(--section-margin) auto;
    padding: 2rem;
    background-color: var(--section-bg);
    color: var(--section-color);
    border-radius: var(--theme-shape-radius);
    align-self: stretch;
    min-width: 305px;
  }
  .small-card__container {
    margin: 0 auto;
    max-width: var(--container-max-width-narrow);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;

  }
  @media screen and (max-width: 1080px){
    .small-card__section {
        min-width: 284px;
        padding: 2rem;
    }
  }
</style>