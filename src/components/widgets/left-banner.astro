---
import { Container } from "@littlesticks/odyssey-theme-components";

const {background, color} = Astro.props;
---
<section class="small-card__section" style={background && `--section-bg:${background}; --section-color:${color}`}>
  <div class="small-card__container">
    <div class="banner-text">
        <slot name="banner_text"></slot>
    </div>
    <div class="banner-icon">
        <slot name="banner_icon" class="test"></slot>
    </div>
    
  </div>
</section>
<style>
    @import url(https://fonts.googleapis.com/css2?family=Playfair+Display);

    .small-card__section {
      padding: 0 2rem;
      background-color: #9BBBA5;
      border-radius: 0 3rem 3rem 0;
      align-self: stretch;
      min-width: 10rem;
      max-width: 1280px;
    }
    .small-card__container {
      margin: 0 auto;
      max-width: 1280px;
      display: flex;
      align-items: center;
      justify-content: flex-end;
      text-align: center;
      color: #193D2A;
    }
    .banner-text {
        flex-grow: 1;
        letter-spacing: 2px;
        margin: 0 0;
        font-size: 1.25rem;
        text-align: left;
    }
    .banner-icon {
        font-size: 4rem;
        font-family: 'Playfair Display';
        padding-left: 1rem;
        vertical-align: center;
        align-self: center;
        padding-bottom: 0.5rem;
        line-height: 9rem;
    }
    .test{

    }
    @media screen and (max-width: 1080px){
      .small-card__section {
          min-width: 250x;
          margin: 0.1rem 0.1rem 0 -1rem;
          padding: 0.5rem 2rem

      }
      .banner-text {
        font-size: 0.90rem; 
      }
    }
    @media screen and (max-width: 414px) {
      .banner-text {
        font-size: 0.75rem; 
      }
      .small-card__section {
        padding: 1rem 1rem;
      }
      .banner-icon {
        font-size: 2rem;
      }
    }

  </style>