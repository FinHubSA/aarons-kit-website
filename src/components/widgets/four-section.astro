---
const {background, color} = Astro.props;
---
<section class="small-card__section">
  <div class="small-card__container">
    <div id="card-1">
      <div class="title-holder">
        <div class="title-icon">
          <slot name="title_icon_1"></slot>
        </div>
      </div>
      <div class="info">
        <div class="title">       
          <slot name="info_1"></slot>
        </div>
        <div class="details-l" id="details-l_1"> 
          <slot name="details_1"></slot>
        </div>
      </div>
    </div>
    <div id="card-2">
      <div class="title-holder">
        <div class="title-icon">
          <slot name="title_icon_2"></slot>
        </div>
      </div>
      <div class="info">
        <div class="title">      
          <slot name="info_2"></slot>
        </div>
        <div class="details-l" id="details-l_2">
          <slot name="details_2"></slot>
        </div>
      </div>
    </div>

    <div id="graphic">
      <img 
        loading="lazy" 
        src="/assets/images/about/PublishingLifecyleGraphic.svg" 
        alt="how this works 3" 
      />
    </div>

    <div id="card-3">
      <div class="title-holder">
        <div class="title-icon">
          <slot name="title_icon_3"></slot>
        </div>
      </div>
      <div class="info">
        <div class="title">       
          <slot name="info_3"></slot>
        </div>
        <div class="details-l" id="details-l_3">
          <slot name="details_3"></slot>
        </div>
      </div>
    </div>

    <div id="card-4">
      <div class="title-holder">
        <div class="title-icon">
          <slot name="title_icon_4"></slot>
        </div>
      </div>
      <div class="info">
        <div class="title">      
          <slot name="info_4"></slot>
        </div>
        <div class="details-l" id="details-l_4">
          <slot name="details_4"></slot>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
    @import url(https://fonts.googleapis.com/css2?family=Playfair+Display);

    .small-card__container {
      position: relative;
      margin: 6rem auto;
      /*max-width: 1280px;*/
      display: flex;
      align-items: left;
      justify-content: center;
      text-align: center;
      color: #193D2A;
    }
    .info {
      flex-grow:1;
      letter-spacing: 2px;
      margin:0 0;
      font-size: 0.75rem;
      text-align: left;
      vertical-align: text-top;
      font-weight: 500;
    }
    .title-icon {
      flex-grow: 0;
      font-size: 2.5rem;
      font-family: 'Playfair Display';
      padding-right: 1rem;
      vertical-align: center;
      align-self: center;
      /*line-height: 9rem;*/
      /*padding-bottom: 0.5rem;*/
    }
    .title{
      font-weight: bold;
      font-size: 1rem;
      -ms-text-justify: initial;

    }
    .title-holder {
      display: flex;
      flex-wrap: nowrap;
      justify-items: flex-start;
      align-items: center;
      align-self: baseline;
      margin-top: -1rem;
    }
    #card-1, #card-2, #card-3, #card-4 {
      display:flex;
      align-items: flex-start;
      position: absolute;
      width: 42.5%;
      min-width: 350px;
      max-width: 550px;
      z-index: 100;
    }
    .details-l {
      display: block;
      margin-left: -1.5rem;
      margin-top: -0.5rem;
      padding-top: 0;
    }
    #card-1 {
      top: 20%;
      right: 0;
    }
    #card-2 {
      top: 35%;
      left: 0;
    }
    #card-3 {
      top: 50%;
      right: 0;
    }
    #card-4 {
      top: 65%;
      left: 0;
    }

    #graphic {
      position: relative;
      z-index: 0;
      left:0; 
      right: 0;
      margin: 0 auto;
      max-width: 120rem;
    }
    @media screen and (max-width: 1080px){
      .title-icon {
        font-size: 1.5rem;
      }
      .title-holder {
        margin-top: -0.5rem;
      }
      .title{
        font-weight: bold;
        font-size: 0.75rem;
        -ms-text-justify: initial;
      }
      #card-2 {
        top: 32.5%;
        left: 0;
      }
      #card-4 {
        top: 67.5%;
        left: 0;
      }
      .details-l {
        display: block;
      }
    }
    @media screen and (max-width: 900px){
      .details-l{
        display: none;
      }
      .small-card__section {
        padding-left: 0;
        padding-right: 0;
      }
      #graphic {
        display: none;
      }
      .small-card__container {
        display:flex;
        flex-direction: column;
        position: static;
      }
      .small-card__section {
        display: flex;
        flex-direction: column;
        align-items: center;
        /*min-width: 250x;*/
        /*margin: 0.1rem -1rem 0.1rem 0;*/
        padding: 0.5rem 2rem 3rem;
      }
      .info, .title-holder{
        padding-top: 20px;
        font-size: 0.6rem; 
      }
      .title-icon {
        font-size: 2rem;
      }
      #card-1, #card-2, #card-3, #card-4 {
        display:flex;
        align-items: flex-start;
        position: relative;
        width: auto;
        min-width: 200px;
        z-index: 90;
      }
      .details-l{
        margin-left: -8rem;
        z-index: 100;
        margin-top:0.5rem;
        padding-bottom: 1.75rem;
        border-radius: 10px;
        background-color : rgb(255, 255, 255,0.9);
        box-shadow: 0px 0px 10px 10px rgba(255,255,255, 0.9);
      }

    }
    @media screen and (max-width: 414px) {
      .banner-text {
        font-size: 0.75rem; 
      }
      .small-card__section {
        padding: 1rem 0.5rem;
      }
      .title-icon {
        font-size: 2rem;
      }
    }
  </style>