        <slot name="details_1"></slot>
      </div>
    </div>

    <div id="card-2">
      <div class="title-holder">
        <div class="title-icon">
          <slot name="title_icon_2"></slot>
        </div>
        <div class="title">      
          <slot name="info_2"></slot>
        </div>
      </div>
      <div class="info">
        <slot name="details_2"></slot>
      </div>
    </div>

    <div id="graphic">
      <img src="/assets/images/about/PublishingLifecyleGraphic.svg" alt="how this works 3" />
    </div>

    <div id="card-3">
      <div class="title-holder">
        <div class="title-icon">
          <slot name="title_icon_3"></slot>
        </div>
        <div class="title">       
          <slot name="info_3"></slot>
        </div>
      </div>
      <div class="info">
        <slot name="details_3"></slot>
      </div>
    </div>

    <div id="card-4">
      <div class="title-holder">
        <div class="title-icon">
          <slot name="title_icon_4"></slot>
        </div>
        <div class="title">      
          <slot name="info_4"></slot>
        </div>
      </div>
