---
const { href, unelevated, outlined, customIcon, onPrimary, newTab } =
  Astro.props;

const Tag = href ? 'a' : 'button';
---

<Tag
  class={`btn2 ${unelevated && `btn2--unelevated`} ${
    outlined && `btn2--outlined`
  } ${onPrimary && `btn2--on-primary`}`}
  href={href}
  target={`${newTab ? '_blank': ``}`}
  rel={`${newTab ? 'noopener noreferrer' : ``}`}
>
  <slot />
  {customIcon && <span class="custom-icon__span"><slot name="icon">custom_icon</slot></span>}
</Tag>

<style>
  .btn2 {
    width: 160px;
    padding: 0.36rem 0.92rem;
    margin-bottom: 0;
    margin-right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--theme-primary);
    color: var(--theme-on-primary);
    border: none;
    border-radius: var(--theme-button-border-radius);
    font-weight: 500;
  }
  .btn2:hover {
    background-color: var(--theme-primary-hover);
  }
  .btn2--unelevated {
    background-color: transparent;
    color: var(--theme-on-bg);
  }
  .btn2--unelevated:hover {
    background-color: transparent;
    opacity: var(--theme-primary-hover);
  }
  .btn2--outlined {
    color: var(--theme-primary);
    background-color: transparent;
    border: 2px solid var(--theme-primary);
    transition: background-color var(--theme-transition);
  }
  .btn2--outlined:hover {
    background-color: var(--theme-primary);
    color: var(--theme-on-primary);
  }
  .custom-icon__span {
    margin-left: 0.25rem;
    display: flex;
    align-items: center;
  }

  .custom-icon__span :global(svg) {
    width: 24px;
    height: 24px;
  }

  a.btn2 {
    text-decoration: none;
  }
  button.btn2 {
    cursor: pointer;
    outline: none;
  }
  @media screen and (max-width: 768px) {
    .btn2{
      width: 140px;  
    }
  }
  @media screen and (max-width: 360px) {
    .btn2{
      width: 130px;  
    }
  }
</style>
